<Page x:Class="Session1Try3.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Session1Try3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Loaded="Page_Loaded"
      Title="AuthPage">

    <ScrollViewer>
        <StackPanel>
            <Label Content="Логин"/>
            <TextBox x:Name="LogTb" />
            <Label Content="Пароль"/>
            <PasswordBox x:Name="PwdPb"/>

            <StackPanel Orientation="Vertical" x:Name="CaptchaSp" Visibility="Collapsed">
                
            <Canvas Width="400" Height="200" x:Name="CanvasAuth">
                <Image Source="/Assets/инь.png" x:Name="InImg" Width="100" Canvas.Bottom="60"/>
                <Image Source="/Assets/янь.png" x:Name="YnImg" Width="100"  Canvas.Bottom="60" Canvas.Right="140"/>
            </Canvas>

            <Slider x:Name="CaptchaSlider" ValueChanged="CaptchaSlider_ValueChanged" Width="400" Height="20" Minimum="0" Maximum="400"/>
            </StackPanel>
            <Button x:Name="OkBtn" Click="OkBtn_Click" Content="Войти"/>
        </StackPanel>
    </ScrollViewer>
</Page>
