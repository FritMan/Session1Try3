<Page x:Class="Session1Try3.Pages.LabResPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Session1Try3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LabResPage" Loaded="Page_Loaded" Unloaded="Page_Unloaded">

    <StackPanel>
        <StackPanel Orientation="Horizontal" x:Name="AuthSp">
            <Label x:Name="UserLab" Content="{Binding Fio}"/>
            <Image x:Name="UserImg" Source="{Binding Photo}" Width="50"/>
            <Label x:Name="TimerLab" Margin="40, 0, 0, 0" />
        </StackPanel>

        <Button Content="Утилизатор"/>
    </StackPanel>
</Page>
